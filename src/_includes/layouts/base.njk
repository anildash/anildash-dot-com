                <li class="nav-item">
                    <a rel="me" href="https://bsky.app/profile/anildash.com">bluesky</a>
                </li>
                <li class="nav-item">
                    <a rel="me" href="https://www.threads.net/@anildash">threads</a>
                </li>
                <li class="nav-item">
                  <a href="https://anildash.com/about">about</a>
                </li>
            </ul>
          </nav>
        </div>
      </header>

      <main class="main">
        {{ content | safe }}
      </main>
<footer class="footer">
        <div class="footer__content">
          <ul class="hero__social-links">
            


